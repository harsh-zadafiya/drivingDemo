<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="../css/style.css" />
    <title>G Page</title>
  </head>

  <body>
    <%- include('./partials/navbar.ejs') %> <% if(typeof user=="object" && user)
    {%>

    <h2 class="text-dark mt-5 p-4">Personal Info</h2>
    <form class="row g-3 p-4" method="post" action="/user/modifiedUser">
      <input type="hidden" id="userId" name="userId" value="<%= user._id %>" />
      <div class="col-md-6">
        <label for="inputFirstName" class="form-label">First Name</label>
        <input
          type="text"
          class="form-control"
          id="inputFirstName"
          name="firstname"
          value="<%= user.firstname %>"
          disabled
        />
      </div>
      <div class="col-md-6">
        <label for="inputlastName" class="form-label">Last Name</label>
        <input
          type="text"
          class="form-control"
          id="inputlastName"
          name="lastname"
          value="<%= user.lastname %>"
          disabled
        />
      </div>
      <div class="col-md-6">
        <label for="inputLicence" class="form-label">Licence Number</label>
        <input
          type="text"
          class="form-control"
          id="inputLicence"
          name="licenseNo"
          value="<%= user.licenseNo %>"
          disabled
        />
      </div>
      <div class="col-md-6">
        <label for="inputAge" class="form-label">Age</label>

        <input
          type="number"
          class="form-control"
          id="inputAge"
          name="age"
          value="<%= user.age %>"
          disabled
        />
      </div>

      <h2 class="text-dark p-4">Car Info</h2>
      <% if(typeof user.car_info=="object" && user.car_info) {%>

      <div class="col-md-6">
        <label for="inputMake" class="form-label">Car Manufacture</label>
        <input
          type="text"
          class="form-control"
          id="inputMake"
          name="make"
          value="<%= user.car_info
          .make %>"
        />
      </div>
      <div class="col-md-6">
        <label for="inputModel" class="form-label">Car Model</label>
        <input
          type="text"
          class="form-control"
          id="inputModel"
          name="model"
          value="<%= user.car_info.model %>"
        />
      </div>
      <div class="col-md-6">
        <label for="inputYear" class="form-label">Year</label>
        <input
          type="text"
          class="form-control"
          id="inputYear"
          name="year"
          value="<%= user.car_info.year %>"
        />
      </div>
      <div class="col-md-6">
        <label for="inputPlate" class="form-label">Plate Number</label>
        <input
          type="text"
          class="form-control"
          id="inputPlate"
          name="plateno"
          value="<%= user.car_info.plateno %>"
        />
      </div>
      <% } %>
      <div class="">
        <button type="submit" class="buttonOfLogin px-5 mb-5 w-30">
          Submit
        </button>
      </div>
    </form>

    <% } %> <%- include('./partials/footer.ejs') %>
  </body>
</html>
